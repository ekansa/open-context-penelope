<?xml version="1.0" encoding="UTF-8"?>
<root>
    <field view="Context" solrName="default_context" ocParam="default_context" sort="1">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Project" solrName="project_name" ocParam="proj" sort="1">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="organize">
                <subField view="New Projects" collapse="true" showType="list" sort="1">
                    <item view="Dove Mountain Groundstone" solrName="Dove Mountain Groundstone" sort="1" />
                    <item view="Bade Museum" solrName="Bade Museum" sort="2" />
                </subField>
                <subField view="Featured Projects" collapse="true" showType="list" sort="2">
                    <item view="Petra Great Temple Excavations" solrName="Petra Great Temple Excavations" sort="1" />
                    <item view="Domuztepe Excavations" solrName="Domuztepe Excavations" sort="2" />
                </subField>
                <subField view="Other" collapse="true" showType="remainder" showNum="100" sort="3" />
            </itemSort>
        </settings>
    </field>
    <field view="Category" solrName="item_class" ocParam="cat" sort="3">
        <showWhen>
            <filter solrName="*" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>15</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="User Tag" solrName="user_tag" ocParam="tag" sort="4">
