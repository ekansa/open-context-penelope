            <showNum>10</showNum>
            <itemSort type="default" />
        </settings>
    </field>
    <field view="Descriptive Variable" solrName="variable_NOB" ocParam="prop" sort="6">
        <showWhen>
            <filter solrName="context" value="2" />
            <filter solrName="item_class" value="*" />
            <filter solrName="project_name" value="*" />
        </showWhen>
        <settings>
            <collapse>false</collapse>
            <showNum>10</showNum>
            <itemSort type="default" />
